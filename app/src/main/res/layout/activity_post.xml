<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PostActivity">

    <VideoView
        android:id="@+id/postVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:id="@+id/pauseImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:src="@mipmap/round_play_circle_filled_white_48"/>

    <ImageView
        android:id="@+id/returnImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:src="@mipmap/round_backspace_white_48"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/uploading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        app:lottie_rawRes="@raw/uploading"
        app:lottie_autoPlay="true"
        android:visibility="invisible"
        app:lottie_loop="true"/>

    <LinearLayout
        android:id="@+id/linearLayout_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">


        <ImageView
            android:id="@+id/chooseImageView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:alpha="1"
            android:src="@mipmap/outline_collections_white_48"/>

        <ImageView
            android:id="@+id/postImageView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:src="@mipmap/round_check_circle_white_48"/>


    </LinearLayout>

</RelativeLayout>